<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="William Walker"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hobbybuttton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobbybuttton2" />

    <Button
        android:id="@+id/hobbybuttton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sailing"
        app:layout_constraintBottom_toBottomOf="@+id/hobbybuttton2"
        app:layout_constraintEnd_toStartOf="@+id/hobbybuttton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hobbybuttton2" />

    <Button
        android:id="@+id/hobbybuttton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Development"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/hobbybuttton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiking"
        app:layout_constraintBottom_toBottomOf="@+id/hobbybuttton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hobbybuttton2"
        app:layout_constraintTop_toTopOf="@+id/hobbybuttton2" />

    <Button
        android:id="@+id/saveExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save + Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hobbybuttton2"
        app:layout_constraintTop_toBottomOf="@+id/hobbybuttton2" />

    <TextView
        android:id="@+id/hobbiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/hobbybuttton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/bioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="<insert bio here>"
        app:layout_constraintBottom_toTopOf="@+id/hobbiesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>